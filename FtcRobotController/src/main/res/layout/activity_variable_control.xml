<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.firstinspires.ftc.robotcontroller.teamcode.activites.VariableControlActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="511dp">

        <GridLayout
            android:id="@+id/variableControlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

        </GridLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/scrollBarLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/scrollBarLeftButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:rotation="90"
            android:src="@android:drawable/arrow_down_float" />

        <SeekBar
            android:id="@+id/scrollBar"
            android:layout_width="252dp"
            android:layout_height="45dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/scrollBarRightButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:rotation="90"
            android:src="@android:drawable/arrow_up_float" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />
    </LinearLayout>


</LinearLayout>
